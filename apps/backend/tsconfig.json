{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
          ],
    },
    "include": [
        "src/index.ts"
    ]
}